@model IEnumerable<WriterListResponse>
@{
    ViewData["Title"] = "WriterList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<div class="row">
    <div class="col-md-3 ml-2">
        <a type="button" class="btn btn-success" href="/Writer/WriterAdd">Yeni Yazar Ekle</a>
    </div>
</div>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Yazar İsmi</th>
            <th>Yazar Hakkında</th>
            <th>Yazar Mail</th>
            <th>Yazar Cinsiyet</th>
            <th>Yazar Instagram</th>
            <th>Yazar Linkedin</th>
            <th>Yazar Twitter</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var writer in Model)
        {
            <tr>
                <td>@writer.WriterFullName</td>
                <td>@writer.WriterAbout</td>
                <td>@writer.WriterMail</td>
                <td>@writer.WriterGender</td>
                <td>@writer.WriterInstagram</td>
                <td>@writer.WriterLinkedin</td>
                <td>@writer.WriterTwitter</td>
                <td><a type="button" class="btn btn-warning" href="/Writer/Edit/@writer.WriterID">Düzenle</a> <a type="button" class="btn btn-danger del" data-id="@writer.WriterID">Sil</a></td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{

    <script>
        $(".del").click(function() {
            let id = $(this).data('id');
            Swal.fire({
                title: 'Silmek istediğinize emin misiniz?',
                text: "Verileriniz kaybolabilir!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/Writer/Delete/" + id,
                        method: "GET",
                        success: function(data) {
                            console.log(data);
                            if (data.success) {
                                Swal.fire({
                                    title: 'İşlem Başarılı!',
                                    text: 'Veri silindi',
                                    type: 'success',
                                }).then(function() {
                                    location.reload();
                                });
                            }

                        }
                    })
                }
            })
        })
    </script>
}