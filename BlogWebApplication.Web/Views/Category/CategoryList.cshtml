@model IEnumerable<CategoryListResponse>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<div class="row">
    <div class="col-md-3 ml-2">
        <a type="button" class="btn btn-success" href="/Category/CategoryAdd">Yeni Kategori Ekle</a>
    </div>
</div>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
                <td><a type="button" class="btn btn-warning" href="/Category/Edit/@category.CategoryID">Düzenle</a> <a type="button" class="btn btn-danger del" data-id="@category.CategoryID">Sil</a></td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{

    <script>
        $(".del").click(function() {
            let id = $(this).data('id');
            Swal.fire({
                title: 'Silmek istediğinize emin misiniz?',
                text: "Verileriniz kaybolabilir!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/Category/Delete/" + id,
                        method: "GET",
                        success: function(data) {
                            console.log(data);
                            if (data.success) {
                                Swal.fire({
                                    title: 'İşlem Başarılı!',
                                    text: 'Veri silindi',
                                    type: 'success',
                                }).then(function() {
                                    location.reload();
                                });
                            }

                        }
                    })
                }
            })
        })
    </script>
}