@model IEnumerable<BlogListResponse>
@{
    ViewData["Title"] = "BlogList";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<br />
<div class="row">
    <div class="col-md-3 ml-2">
        <a type="button" class="btn btn-success" href="/Blog/BlogAdd">Yeni Blog Ekle</a>
    </div>
</div>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Blog Başlığı</th>
            <th>Blog İçeriği</th>
            <th>Yazar</th>
            <th>Kategori</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.BlogID</td>
                <td>@blog.BlogTitle</td>
                <td>@blog.BlogContent?[0..Math.Min(@blog.BlogContent.Length, 50)]</td>
                <td>@blog.Writer.WriterFullName</td>
                <td>@blog.Category.CategoryName</td>
                <td><a type="button" class="btn btn-warning" href="/Blog/Edit/@blog.BlogID">Düzenle</a> <a type="button" class="btn btn-danger del" data-id="@blog.BlogID">Sil</a></td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{
    
    <script>
        $(".del").click(function() {

            let id = $(this).data('id');
            Swal.fire({
                title: 'Silmek istediğinize emin misiniz?',
                text: "Verileriniz kaybolabilir!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/Blog/Delete/" + id,
                        method: "GET",
                        success: function(data) {
                            console.log(data);
                            if (data.success) {
                                Swal.fire({
                                    title: 'İşlem Başarılı!',
                                    text: 'Veri silindi',
                                    type: 'success',
                                }).then(function() {
                                    location.reload();
                                });
                            }

                        }
                    })
                }
            })
        })
    </script>
}