@model IEnumerable<Comment>

@if (Model.Count() == 0)
{
    <p>Henüz yorum yapılmamış</p>
}
else
{
    @foreach(var item in Model)
{
    <div class="row">
    <div class="col-md-2">
        <img style="width:70%" src="~/images/@item.User.ImageURL" class="img-fluid" alt="" />
    </div>
    <div class="col-md-10">
        <div class="card border-0">
            <div class="card-body">
                <h5 class="mt-0">@item.User.UserName</h5>
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>

    </div>
</div>

}


}
