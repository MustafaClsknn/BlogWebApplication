@model UserLoginRequest
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <link rel="stylesheet" href="~/AdminTema/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/AdminTema/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/AdminTema/assets/css/style.css">
    <link rel="shortcut icon" href="~/AdminTema/assets/images/favicon.ico" />
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <h2 class="text-primary ml-5">Admin Giriş Sayfası</h2>
                </div>              
                <form class="pt-3" asp-action="AdminLogin" asp-controller="User">
                  <div class="form-group">
                    <input name="UserName" class="form-control form-control-lg" placeholder="Kullanıcı Adı">
                  </div>
                  <div class="form-group">
                    <input name="Password" type="Password" class="form-control form-control-lg" placeholder="Şifre">
                  </div>
                  <div asp-validation-summary="All"></div>
                  <div class="mt-3">
                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Giriş Yap</button>
                  </div>
                  <div class="text-center mt-4 font-weight-light"> Hesabın yok mu ? <a href="/User/AdminRegister" class="text-primary">Kayıt Ol</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="~/AdminTema/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/AdminTema/assets/js/off-canvas.js"></script>
    <script src="~/AdminTema/assets/js/hoverable-collapse.js"></script>
    <script src="~/AdminTema/assets/js/misc.js"></script>
  </body>
</html>
