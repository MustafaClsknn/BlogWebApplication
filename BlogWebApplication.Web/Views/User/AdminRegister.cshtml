@model AddUserRequest
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <link rel="stylesheet" href="~/AdminTema/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/AdminTema/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/AdminTema/assets/css/style.css">
    <link rel="shortcut icon" href="~/AdminTema/assets/images/favicon.ico" />
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-6 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <h2 class="text-primary" style="margin-left:170px">Admin Kayıt Sayfası</h2>
                            </div>
                            <form class="pt-3" asp-action="AdminRegister" asp-controller="User">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="UserName" placeholder="Kullanıcı Adı" />
                                    <span asp-validation-for="UserName"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="FullName" placeholder="İsim Soyisim" />
                                    <span asp-validation-for="FullName"></span>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" name="UserMail" placeholder="E-Mail" />
                                    <span asp-validation-for="UserMail"></span>
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="pass" name="Password" placeholder="Şifre" />
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="passConfirm" name="PasswordRepeat" placeholder="Şifre Tekrarı" />
                                    <span id="passCon" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <select class="form-control" asp-for="UserGender" asp-items="ViewBag.Genders"></select>
                                            <span asp-validation-for="UserGender" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="date" style="color:grey" class="form-control" name="BirthDate" />
                                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Kullanıcı kurallarını/koşullarını kabul ediyorum
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Kayıt Ol</button>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten hesabın var mı ? <a href="/User/AdminLogin" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/AdminTema/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/AdminTema/assets/js/off-canvas.js"></script>
    <script src="~/AdminTema/assets/js/hoverable-collapse.js"></script>
    <script src="~/AdminTema/assets/js/misc.js"></script>
</body>
</html>

<script>
    $(document).ready(function() {
        $("#passConfirm").change(function() {
            $("#passCon").css("display", "none");
            $(":submit").attr("disabled", true);
            var sifre = $("#pass").val();
            if (sifre == $(this).val()) {
                $(":submit").removeAttr("disabled");
            } else {
                $("#passCon").text("Şifre tekrarı şifre ile uyuşmuyor");
                $("#passCon").css("display", "block");
            }
        })
    })
</script>